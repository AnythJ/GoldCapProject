@model Income

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<style>
    
</style>

<div class="row">
    <div class="col-md-12">
        <form id="createIncomeForm" asp-action="CreateOrEditIncome" onsubmit="return false" asp-route-id="@Model.Id" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label"></label>
                        <input id="amountinput" asp-for="Amount" class="form-control modalInput" />
                        <span asp-validation-for="Amount"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input id="dateinput" asp-for="Date" class="form-control modalInput" />
                        <span asp-validation-for="Date"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control description-textarea"></textarea>
                <span asp-validation-for="Description"></span>
            </div>

            <div id="submitRecurring" class="form-group form-footer">
                <input id="submitButton" type="button" onclick="PostRecurringOrIncome('createIncomeForm', 'tableInModalIncome')" value="Submit" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>


@if (Model.Id == 0)
{
    <script>
    // Date format: 17.07.2021 10:50:20
    @*$("#dateinput").val(@DateTime.Now.ToString("dd/MM/yyyy HH:mm");*@
    $("#amountinput").val("");
    </script>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}