@model DashboardViewModel

@{
    Layout = null;
}




<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="#">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        :root {
            font-size: 16px;
            font-family: Arial;
            --bg-primary: #212529;
            --bg-secondary: #2D3339;
            --bg-third: #0DCAF0;
            --bg-fourth: hsl(210, 11%, 18%);
            --text-primary: #434D56;
            --bg-navbar: #2d3339;
        }

        body {
            color: white;
            background-color: var(--bg-primary);
            margin: 0;
            padding: 0;
        }

        main {
            margin-left: 14rem;
            padding: 1rem;
            transition: margin 0.2s ease;
        }

        .navbar-side {
            position: fixed;
            display: flex;
            flex-direction: column;
            background-color: var(--bg-secondary);
            margin: 0;
            padding: 0;
            transition: width 0.2s ease;
        }


        .navbar-nav-side {
            list-style: none;
            text-decoration: none;
            padding: 0;
            display: flex;
            flex-direction: column;
            margin: 0;
            align-items: center;
            height: 100%;
        }

        .nav-side-link {
            color: white;
            height: 5rem;
            display: flex;
            align-items: center;
            text-decoration: none;
            filter: grayscale(100%) opacity(0.6);
            transition: 0.6s;
        }

            .nav-side-link:hover {
                filter: grayscale(0%) opacity(1);
                background-color: var(--bg-third);
                color: var(--bg-primary);
            }

        .nav-side-item {
            width: 100%;
        }

            .nav-side-item:last-child {
                margin-top: auto;
            }

        .link-text {
            text-decoration: none;
            display: none;
            margin-left: 1rem;
        }

        .nav-side-link i {
            font-size: 2rem;
            min-width: 2rem;
            margin: 0 1.5rem;
        }

        .goldcapLogo {
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
            width: 100%;
            color: var(--bg-third);
            background-color: var(--bg-secondary);
            letter-spacing: 0.2ch;
        }

        .goldcapLogo-text {
            text-align: center;
            display: none;
            position: absolute;
            transition: 0.6s;
            margin: 0 2.5rem;
            color: var(--bg-third);
        }

        .navbar-side:hover {
            width: 14rem !important;
        }
        .navbar-side:hover .link-text {
            display: inline !important;
        }
        .navbar-side:hover .goldcapLogo i{
            display: none !important;
        }
        

        .nav-side-link-logo {
            color: var(--bg-third);
            height: 5rem;
            display: flex;
            align-items: center;
            text-decoration: none;
            filter: grayscale(100%) opacity(0.6);
            transition: 0.6s;
        }

            .nav-side-link-logo:hover {
                filter: grayscale(0%) opacity(1);
                background-color: var(--bg-primary);
                color: var(--bg-third);
            }

            .nav-side-link-logo i {
                color: var(--bg-third);
                font-size: 2rem;
                min-width: 2rem;
                margin: 0 1.5rem;
            }

        @@media only screen and (max-width: 600px) {
            .navbar-side {
                width: 100vw;
                height: 5rem;
                bottom: 0;
            }

            .navbar-nav-side {
                flex-direction: row;
            }

            .nav-side-link {
                justify-content: center;
            }

            main {
                margin: 0;
            }

            .goldcapLogo {
                display: none;
            }
        }

        @@media only screen and (min-width: 600px) {
            .navbar-side {
                width: 5rem;
                height: 100vh;
                top: 0;
            }

            .link-text {
                display: none;
                transition: 0.1s;
            }

            .goldcapLogo-text {
                display: none;
            }
        }

        
    </style>
    <title></title>
</head>

<body>
        <nav id="sideNavbar" class="navbar-side">
            <ul class="navbar-nav-side">
                <li class="goldcapLogo">
                    <a href="#" class="nav-side-link-logo">
                        <i id="logo-icon" class="fas fa-home fa-primary"></i>
                        <span class="link-text goldcapLogo-text fa-primary">GOLDCAP</span>
                    </a>
                </li>

                <li class="nav-side-item">
                    <a class="nav-side-link">
                        <i class="fas fa-chart-line fa-primary"></i>
                        <span class="link-text fa-primary">Dashboard</span>
                    </a>
                </li>

                <li class="nav-side-item">
                    <a href="#" class="nav-side-link">
                        <i class="fas fa-list fa-primary"></i>
                        <span class="link-text fa-primary">Expenses</span>
                    </a>
                </li>

                <li class="nav-side-item">
                    <a href="#" class="nav-side-link">
                        <i class="fas fa-list-alt"></i>
                        <span class="link-text fa-primary">Categories</span>
                    </a>
                </li>

                <li class="nav-side-item">
                    <a href="#" class="nav-side-link">
                        <i class="fas fa-sign-out-alt"></i>
                        <span class="link-text fa-primary">Logout</span>
                    </a>
                </li>
            </ul>
        </nav>
    <main>
        <h1>Main content here</h1>
        <i onclick="hideSideNavbar()" class="fas fa-angle-double-left" style="font-size: 5rem;"></i>
    </main>
</body>
</html>
<script>
    function navbarStartStyle() {
        document.getElementById("sideNavbar").style.width = "14rem";
        document.getElementById("logo-icon").style.display = "none";
        var links = document.getElementsByClassName("link-text");
        for (var i = 0; i < links.length; i++) {
            links[i].style.display = "inline";
        }
    }
    

    function hideSideNavbar() {
        var sideNavbarSize = document.getElementById("sideNavbar").offsetWidth;
        if (sideNavbarSize > 80) {
            document.getElementById("logo-icon").style.display = "block";
            document.getElementById("sideNavbar").style.width = "5rem";
            var links = document.getElementsByClassName("link-text");
            for (var i = 0; i < links.length; i++) {
                links[i].style.display = "none";
            }
            document.getElementsByTagName("main")[0].style.marginLeft = "5rem";
        }
        else {
            document.getElementById("logo-icon").style.display = "none";
            document.getElementById("sideNavbar").style.width = "14rem";
            var links = document.getElementsByClassName("link-text");
            for (var i = 0; i < links.length; i++) {
                links[i].style.display = "inline";
            }
            document.getElementsByTagName("main")[0].style.marginLeft = "14rem";
        }

    }
</script>
