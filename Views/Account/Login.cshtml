@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .mainForm {
        max-width: 500px;
        min-width: 250px;
        margin: 0 auto;
        text-align: center;
        
        position: relative;
        z-index: 6;
        padding-top: 15%;
    }
    .loginForm {
        position: relative;
        z-index: 5;
        margin: 0 auto;
        text-align: center;
        border: 3px solid #0DCAF0;
        border-radius: 5px;
        padding: 5% 20%;
        background-color: #212529;
    }
    h1 {
        font-size: 55px;
        font-weight: bold;
        color: #9ba6b0;
    }
    input.form-control, input.form-control:-webkit-autofill, input.form-control:-webkit-autofill:hover, input.form-control:-webkit-autofill:active {
        background-color: #2d3339;
        color: #9ba6b0;
        border-color: #212529;
        border-radius: 5px;
        -webkit-box-shadow: 0 0 0px 200px #2d3339 inset;
        -webkit-text-fill-color: #9ba6b0;
    }
        input.form-control:active, input.form-control:focus, input.form-contro:hover, input.form-control:-webkit-autofill:focus {
            background-color: #2d3339;
            color: #9ba6b0;
            border-color: #0DCAF0;
            border-radius: 5px;
            -webkit-box-shadow: 0 0 0px 200px #2d3339 inset;
            -webkit-text-fill-color: #9ba6b0;
        }

    
        
    .form-group {
        margin: 5px 0;
    }

</style>
<div class="mainForm">
    <div class="loginForm">
        <h1>GoldCap</h1>
        <form method="post">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-info"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-info"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label asp-for="RememberMe">
                        Remember me
                        <input asp-for="RememberMe"/>
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-outline-info">Login</button>
            <a class="btn btn-outline-info" asp-action="register" asp-controller="account">Register</a>
            <div asp-validation-summary="All" class="text-info"></div>
        </form>
    </div>
</div>
