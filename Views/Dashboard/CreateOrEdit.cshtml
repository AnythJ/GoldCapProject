@model ExpenseRecurringViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<style>
    .weekdayCheckbox span {
        display: inline-block;
        border-radius: 5px;
        background-color: lightgray;
        width: 2em;
        height: 2em;
        text-align: center;
        cursor: pointer;
        padding-top: 5px;
    }

    .weekdayCheckbox  :checked + span {
        background-color: Highlight;
        color: white;
    }
</style>
<script type="text/javascript">
    if (document.getElementById("createRecurring")) {
        document.getElementById("modalDialog").classList.remove("modal-lg");
    }
</script>
<div class="row" id="createRecurring">
    <div class="col-md-12">
        <form asp-action="CreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostDashboard(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input id="amountinput" asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <select asp-for="Category" style="height:38px;" asp-items="@(new SelectList(ViewBag.CategoryList,"Name","Name"))"></select>
                        <span asp-validation-for="Category"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Date" class="control-label" id="startDate" onmouseover="showStartDateTooltip()" data-toggle="tooltip" data-placement="top" title="If you choose custom every > 1 week, better set Start Date on the first day you want to add this expense, otherwise first addition will be in chosen day after chosen number of weeks.">Start Date</label>
                        <input id="dateinput" asp-for="Date" style="height:38px;" class="form-control" />
                        <span asp-validation-for="Date"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea style="resize:none;height:90px;" id="description-input" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="col-md-10">
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select id="recurringSelect" onchange="customField()" asp-for="Status" style="height:38px;" asp-items="Html.GetEnumSelectList<StatusName>()"></select>
                    <span asp-validation-for="Status"></span>

                    <div id="customStatus" style="margin-top:15px;visibility:hidden;">
                        <label style="margin-right:5px;">Every</label>
                        <input id="focusableInput" type="number" min="1" max="999" style="width:2em;" asp-for="HowOften">
                        <label style="margin: 0 5px 0 5px;">Weeks</label>
                        @for (int i = 0; i < 7; i++)
                        {
                            <label class="weekdayCheckbox">
                                @Html.CheckBoxFor(item => item.Weekdays[i], new { @style = "display:none;" })
                                <span>@ViewBag.Weekdays[i]</span>
                            </label>
                        }
                    </div>

                </div>
            </div>

            <div class="form-group" style="margin-top:15px;text-align:right;">
                <input type="submit" value="Submit" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

@if (Model.Id == 0)
{
    <script>
    @*$("#dateinput").val(@DateTime.Now.ToString("dd/MM/yyyy HH:mm");*@
        $("#amountinput").val("");
        function customField() {
            var x = document.getElementById('customStatus');
            var y = document.getElementById('focusableInput');
            if (document.getElementById('recurringSelect').value == 4) {
                x.style.visibility = "visible";
                y.required = true;
            }
            else {
                x.style.visibility = "hidden";
                y.required = false;
            }
        }
        
        function showStartDateTooltip() {
            $('#startDate').tooltip('show');
        }
    </script>
}


@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}