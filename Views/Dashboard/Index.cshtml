@model IEnumerable<Expense>

<style>
    body {
        background-color: white;
        color: black;
    }
    /*#region table */
    .tableContainer {
        padding: 0;
        margin: 0;
        height: 350px;
        max-width: calc(80%-609px);
        min-width: 645px;
    }



    thead.sticky-top {
        background-color: lightgray;
    }

    .table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
        /*background-color: #5f666d;*/
        background-color: lightgray;
        color: white;
    }

    /*#endregion */


    /*#region mainLayout */
    .lineChartRow {
        float: left;
        height: 300px;
        width: 80%;
    }
    /*#endregion */

    .shadowDiv {
        box-shadow: 0 19px 38px rgba(0,0,0,0.20), 0 15px 12px rgba(0,0,0,0.22);
    }

        .shadowDiv:hover {
            box-shadow: 0 14px 28px rgba(0,0,0,0.15), 0 10px 10px rgba(0,0,0,0.22);
        }





    /*#region StatCircles */

    .circle .right {
        z-index: 3;
        transform: rotate(@ViewBag.PercentageStringStartRight);

    }
    @@keyframes left {
        100% {
            transform: rotate(@ViewBag.PercentageStringLeft);
        }
    }
    @@keyframes right {
        100% {
            transform: rotate(@ViewBag.PercentageStringRight);
        }
    }
    @@keyframes circleShow {
        0% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }
    }

    div .statCircle {
        animation: circleShow 0.6s linear;
    }

    #adviceDiv p{
        border-top: 2px solid black;
        margin: 10px 8px 0 8px;
        padding-top: 10px;
        font-weight: 600;
    }
    #adviceDiv p a {
        text-decoration: none;
    }
    /*::-webkit-scrollbar {
        width: 10px;
    }*/
/*#endregion */
</style>

@section Styles{
    <link href="~/css/lineChart.css" rel="stylesheet" />
    <link href="~/css/pieChart.css" rel="stylesheet" />
    <link href="~/css/statCircle.css" rel="stylesheet" />
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="shortcut icon" href="#">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/series-label.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>
    <script src="~/jss/lineChart.js"></script>
    <script src="~/jss/pieChart.js"></script>
    <title></title>
</head>

<body>
    <div style="height:100%;overflow:auto;">
        <div class="lineChartRow shadowDiv" style="margin:20px;">
            <figure id="lineFigure" class="highcharts-figure" style="height:300px;">
                <div id="container" style="height:300px;"></div>
            </figure>
        </div>

        <div id="adviceDiv" style="width: 15%;height:300px;float:left;margin-top:20px;" class="shadowDiv">
            <h1 style="margin:8px 0 15px 8px;font-size:20px;font-weight:bolder;">Advice</h1>
            <p><a href="#">Add monthly payments to make your life easier</a></p>
            <p><a href="#">Add monthly payments to make your life easier</a></p>
            <p><a href="#">Add monthly payments to make your life easier</a></p>
            <p style="padding-top:5px;text-align:right;"><a onclick="showInPopup('@Url.Action("RecurringPayments","Dashboard",new { id = 0},Context.Request.Scheme)','Recurring payments')" class="btn btn-success btn-sm">Recurring payments</a>
        </div>

        <div style="margin-left:20px;float:left;">
            <figure id="pieFigure" class="highcharts-figure shadowDiv" style="float:left;height:350px;">
                <div id="container-pie" style="height:350px;"></div>
                <p class="highcharts-description">
                </p>
            </figure>
        </div>

        <div class="shadowDiv" style="float:left;width:auto;margin-left:20px;margin-top:16px;max-height:350px;overflow-y:auto;background-color:white;">
            <table class="table table-hover" style="border-collapse: separate; border-spacing: 0;">
                <thead class="sticky-top">
                    <tr style="font-weight:bold;">
                        <td id="tableRowId">Most used categories</td>
                        <td style="text-align:right;">%</td>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @foreach (var item in ViewBag.Categories)
                    {
                        <tr class="trClass">
                            <td>
                                @item.CategoryName
                            </td>
                            <td>
                                @String.Format("{0:0.00}", item.CategoryPercentage)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="shadowDiv" style="float:left;min-width:605px;width:auto;margin-left:20px;margin-top:16px;max-height:350px;background-color:white;">
            <div id="view-all" class="table-responsive tableContainer">
                @await Html.PartialAsync("_ViewAll", Model)
            </div>
        </div>

        <!-- #region Stat Progress Circles -->

        <div style="float: left; margin-top: 20px; margin-left: 20px; position: static; border-radius: 100%; border: 1px solid #68a4fd;">
            <div class="statCircle">
                <div class="smallerCircle" style="padding-top:10px;">
                    <p style="font-size: 20px;font-weight:bold;">@ViewBag.SumLast30$</p>
                    <p>of @ViewBag.SumBeforeLast30$</p>
                    <hr style="margin:5px 10% 5px 10%;padding:0;height:3px;" />
                    <p>@ViewBag.UnderMonth$ <small>under</small></p>
                    <p>last month</p>
                </div>
                <div class="circle">
                    <div class="bar left">
                        <div class="progress"></div>
                    </div>
                    <div class="bar right">
                        <div class="progress"></div>
                    </div>
                </div>
            </div>
        </div>
