@model IEnumerable<GoldCap.Models.ExpenseRecurring>
@{
    ViewData["Title"] = "List of recurring payments";
    Layout = null;
}

@section Styles {
    <link href="~/css/DashboardCSS/recurringList.css" rel="stylesheet" />
}
    <style>
        .modal-body {
            padding: 0.625rem 0 0.625rem 0 !important;
        }
        .btn-succes-color {
        color: var(--bg-secondary);
        border-color: var(--btn-succes);
        background-color: var(--btn-succes);
        outline-color: var(--btn-succes);
        font-weight: bold;
    }

        .btn-succes-color:hover {
            background-color: var(--btn-succes-hover);
            color: var(--text-third);
        }
    </style>
    <script type="text/javascript">
    </script>
    <div class="table-responsive tableContainer" id="tableInModal">
        <table class="table table-hover">
            <thead class="sticky-top">
                <tr class="align-text-top">
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th style="padding-left:20px;">
                        Next Payment
                    </th>
                    <th style="text-align:right; padding-right:30px;">
                        <a onclick="showInPopup('@Url.Action("CreateOrEdit","Dashboard",new { id = 0},Context.Request.Scheme)','New expense')" class="btn btn-succes-color btn-sm">New expense</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td class="description">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td style="width:220px;padding-left:20px;">
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td align="right" style="padding-right:30px;width:220px;">
                        <form asp-controller="dashboard" asp-action="Delete" asp-route-id="@item.Id" onsubmit="return DeleteRecurring(this)" class="d-inline">
                            <input type="submit" value="Delete" class="btn btn-outline-danger btn-sm" />
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


