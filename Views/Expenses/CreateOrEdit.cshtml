@model Expense

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <form id="createExpenseForm" asp-action="CreateOrEdit" asp-route-id="@Model.Id" onsubmit="return false" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input id="amountinput" asp-for="Amount" class="form-control modalInput" />
                <span asp-validation-for="Amount"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <select class="form-control category-select modalInput" asp-for="Category" asp-items="@(new SelectList(ViewBag.CategoryList,"Name","Name"))"></select>
                        <span asp-validation-for="Category"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input id="dateinput" asp-for="Date" class="form-control modalInput" />
                        <span asp-validation-for="Date"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control description-textarea"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group form-footer">
                <input id="submitButton" type="button" onclick="PostExpense()" value="Submit" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>

@if (Model.Id == 0)
{
    <script type="text/javascript">
        document.getElementById("amountinput").value = '';
    </script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }