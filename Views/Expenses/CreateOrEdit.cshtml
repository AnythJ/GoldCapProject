@model Expense

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<style>
    .modal-backdrop {
        z-index: -1;
    }

    .modal-title {
        font-weight: bold;
    }

    .btn-close {
        -webkit-filter: invert(100%);
        filter: invert(100%);
    }

    .modal-body, .modal-header, .modal-title, .modal-footer {
        background-color: var(--bg-primary);
        color: var(--text-secondary);
    }

    .modal-content {
        border: 3px solid var(--text-primary);
        border-radius: 5px;
    }

    .modal-header {
        border: none;
        border-bottom: 3px solid var(--text-primary);
        border-radius: 0;
    }

    input[type=text].modalInput, input[type=text].modalInput:focus, input[type=datetime-local].modalInput, input[type=datetime-local].modalInput:focus, select.modalInput, select.modalInput:focus {
        background-color: var(--bg-secondary);
        color: var(--text-secondary);
        border-color: var(--bg-third);
        border-radius: 5px;
        margin: 0;
    }

    input[type=datetime-local] {
        margin: 0;
        width: 100%;
    }

    .description-textarea, .description-textarea:focus {
        background-color: var(--bg-secondary);
        color: var(--text-secondary);
        resize: none;
        max-width: 135ch;
        border: 0.5px solid var(--bg-third);
        border-radius: 5px;
    }

    .category-select, .category-select:focus {
        background-color: var(--bg-secondary);
        color: var(--text-secondary);
        border: 0.5px solid var(--bg-third);
        border-radius: 5px;
    }

    select.category-select::-webkit-scrollbar {
        display: block;
        width: 3px;
        background-color: var(--text-primary);
    }

    select.category-select::-webkit-scrollbar-thumb {
        background-color: var(--scrollbar-primary);
    }

    div.btn-submit {
        text-align: right;
        margin-top: 0.9375rem;
    }

        div.btn-submit .btn-outline-info {
            font-weight: normal;
        }

</style>
<div class="row">
    <div class="col-md-12">
        <form id="createExpenseForm" asp-action="CreateOrEdit" asp-route-id="@Model.Id" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input id="amountinput" asp-for="Amount" class="form-control modalInput" />
                <span asp-validation-for="Amount"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <select class="form-control category-select modalInput" asp-for="Category" asp-items="@(new SelectList(ViewBag.CategoryList,"Name","Name"))"></select>
                        <span asp-validation-for="Category"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input id="dateinput" asp-for="Date" class="form-control modalInput" />
                        <span asp-validation-for="Date"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control description-textarea"></textarea>
                <span asp-validation-for="Description"></span>
            </div>

            <div class="form-group btn-submit">
                <input type="button" onclick="PostExpense()" value="Submit" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>


@if (Model.Id == 0)
{
    <script type="text/javascript">
        document.getElementById("amountinput").value = '';
    </script>
}


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}