    function changeSliderItem(element) {
        if (element.id == "dashboard") {
            document.getElementById("sliderItem1").classList.remove("hidden");
            document.getElementById("sliderItem2").classList.add("hidden");
            document.getElementsByClassName("sliderItemBlop")[0].classList.add("active");
            document.getElementsByClassName("sliderItemBlop")[1].classList.remove("active");
            document.getElementById("textUnderSlider").innerText = "Everything you need to know about your spendings in the intuitive dashboard panel.";

        }
        else if (element.id == "list") {
            document.getElementsByClassName("sliderItemBlop")[1].classList.add("active");
            document.getElementsByClassName("sliderItemBlop")[0].classList.remove("active");
            document.getElementById("sliderItem1").classList.add("hidden");
            document.getElementById("sliderItem2").classList.remove("hidden");
            document.getElementById("textUnderSlider").innerText = "You can add, edit or delete expense you want at any time, thanks to the complete list.";
        }
    }

    function changeImg() {
        var reswidth = window.innerWidth;
        if (reswidth > 810) {
            if (document.getElementsByClassName("sliderItemBlop")[0].classList.contains("active")) {
                document.getElementById("sliderItem1").classList.remove("hidden");
                document.getElementById("sliderItem2").classList.add("hidden");
                document.getElementById("textUnderSlider").innerText = "Everything you need to know about your spendings in the intuitive dashboard panel.";

            }
        }
        else {
            if (document.getElementsByClassName("sliderItemBlop")[0].classList.contains("active")) {
                document.getElementById("sliderItem2").classList.remove("hidden");
                document.getElementById("sliderItem1").classList.add("hidden");
            }

            document.getElementById("textUnderSlider").innerText = "You can add, edit or delete expense you want at any time, thanks to the complete list.";
        }
    }
    $(document).ready(function () {
        changeImg();
