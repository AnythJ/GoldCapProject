@inject SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/css/LayoutCSS/site.css" rel="stylesheet" />*@
    <link href="~/css/LayoutCSS/Layout.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    @*<link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200&display=swap" rel="stylesheet">*@
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    @RenderSection("Styles", required: false)

    <style>
        .navbar-top-items {
            display: flex;
        }

        #collapseBtn {
            flex: 1;
            text-decoration: none;
        }

        #periodButtons {
            flex: 1;
            display: none;
            text-align: right;
            justify-content: end;
            align-items: center;
        }

        #dropdownAvatar {
            margin-right: 1rem;
        }

        .navbar-top-items {
            width: 100%;
            align-items: center;
            justify-content: space-between;
        }

        .color-themes-btn {
            width: 100%;
            display: flex;
            justify-content: space-evenly;
            align-items: center;
        }

        .colorTheme-item {
            margin-top: auto;
            cursor: default;
        }

        .dropdown-menu {
            background-color: var(--bg-secondary);
        }

        .dropdown-item {
            color: var(--text-secondary);
        }

        .dropdown-menu.dropdown-item:hover, .dropdown-menu .dropdown-item:active, .dropdown-menu .dropdown-item:hover {
            background-color: var(--bg-primary);
            color: var(--text-secondary);
        }

        .dropdown-item.colorTheme-item:hover, .dropdown-item.colorTheme-item:active, .dropdown-item.colorTheme-item:focus {
            background-color: var(--bg-secondary);
        }

        .dropdown-item.dropdown-item-email:hover, .dropdown-item.dropdown-item-email:active, .dropdown-item.dropdown-item-email:focus {
            background-color: var(--bg-secondary);
        }

        .dropdown-item-email {
            cursor: default;
        }

        .ct-circle {
            border: 3px solid var(--text-primary);
            border-radius: 50%;
            width: 2.5rem;
            height: 2.5rem;
            cursor: pointer;
        }

        .ct-first {
            background-color: #212529;
        }

        .ct-second {
            background-color: #6a040f;
        }

        .ct-third {
            background-color: white;
        }

        main {
            display: none;
            opacity: 0;
            animation: fadeIn 0.3s linear forwards;
        }

        .loadingBackground {
            background-color: var(--bg-primary);
            display: flex;
            justify-content: center;
            align-items: center;
            margin-left: 14rem;
            margin-top: 4rem;
            z-index: 20;
            height: calc(100vh - 4rem);
        }

        @@keyframes fadeOut {
            50% {
                opacity: 1;
            }

            100% {
                opacity: 0.2;
            }
        }

        @@keyframes fadeIn {
            50% {
                opacity: 0;
            }

            100% {
                opacity: 1;
                display: block;
            }
        }

        .loadingSpinner {
            background-color: var(--bg-primary);
            margin: 0;
            padding: 0;
            width: 6.25rem;
            height: 6.25rem;
            border: 0.8rem solid var(--bg-secondary);
            border-radius: 50%;
            border-top-color: var(--bg-third);
            animation: spin 1s cubic-bezier(.58,.1,0,.97) infinite;
        }

        .hidden {
            animation: fadeOut 0.3s linear forwards;
            opacity: 1;
        }

        @@media only screen and (max-width: 1091px) {
            .loadingBackground {
                margin-left: 0;
                margin-top: 0;
                margin-bottom: 5rem;
            }

            .color-themes-btn {
                margin-top: 0;
            }
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .modal-open {
            overflow: hidden;
            overflow-y: inherit !important;
            padding-right: 0 !important;
        }

        div .dropdown {
            border: 3px solid var(--bg-third);
            border-radius: 50%;
            margin-left: 1.25rem;
            width: 2.8125rem;
            height: 2.8125rem;
        }

        .dropdownAvatar, .dropdown-toggle:hover, .dropdown-toggle:active, .dropdown-toggle:active, .dropdown-toggle:focus {
            width: 100%;
            height: 100%;
            color: transparent;
            background-color: transparent;
            border: none;
            outline: none;
            box-shadow: none;
            text-align: center;
            padding: 0;
            border-radius: 50%;
        }

        .fa-user {
            color: white;
            width: 100%;
            height: 100%;
            font-size: 2rem;
            overflow: hidden;
            border-radius: 50%;
        }

        .logoutButton {
            color: var(--btn-danger);
            outline: none;
            border: none;
            background-color: transparent;
            margin-left: 0;
            padding-left: 0;
            font-weight: 600;
        }
    </style>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar-side">
        <ul class="navbar-nav-side">
            <li class="goldcapLogo">
                <a asp-action="index" asp-controller="home" class="nav-side-link-logo">
                    <i id="logo-icon" class="fas fa-home fa-primary"></i>
                    <span class="link-text goldcapLogo-text fa-primary">GOLDCAP</span>
                </a>
            </li>

            <li class="nav-side-item">
                <a asp-action="index" asp-controller="dashboard" class="nav-side-link">
                    <i class="fas fa-chart-line fa-primary"></i>
                    <span class="link-text fa-primary">Dashboard</span>
                </a>
            </li>

            <li class="nav-side-item">
                <a asp-action="index" asp-controller="expenses" class="nav-side-link">
                    <i class="fas fa-list fa-primary"></i>
                    <span class="link-text fa-primary">Expenses</span>
                </a>
            </li>

            <li class="nav-side-item">
                <a asp-action="index" asp-controller="categories" class="nav-side-link">
                    <i class="fas fa-list-alt"></i>
                    <span class="link-text fa-primary">Categories</span>
                </a>
            </li>

            <li class="nav-side-item">
                <a asp-action="logout" asp-controller="account" class="nav-side-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span class="link-text fa-primary">Logout</span>
                </a>
            </li>
        </ul>
    </nav>
    <nav class="navbar-top">
        <div class="navbar-top-items">
            <a id="collapseBtn">
                <i id="collapseSideNavbar" class="fas fa-angle-double-left" onclick="collapseSideNavbar()"></i>
            </a>

            <div id="periodButtons">
                @Html.ActionLink("Week", "Index", "Dashboard", new { period = 7 }, new { @class = "btn btn-outline-info", @id = "btnWeek", @onclick = "stayActive(this.id)" })
                @Html.ActionLink("Month", "Index", "Dashboard", new { period = 30 }, new { @class = "btn btn-outline-info", @id = "btnMonth", @onclick = "stayActive(this.id)" })
                @Html.ActionLink("Year", "Index", "Dashboard", new { period = 365 }, new { @class = "btn btn-outline-info", @id = "btnYear", @onclick = "stayActive(this.id)" })



            </div>
            <div id="dropdownAvatar" class="dropdown">
                <a class="btn btn-secondary dropdown-toggle dropdownAvatar" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user"></i>
                </a>

                <ul id="dropdownMenuList" class="dropdown-menu dropdown-menu-end dropdown-menu-sm-end" aria-labelledby="dropdownMenuLink">
                    <li><a class="dropdown-item" asp-action="myprofile" asp-controller="account">My Profile</a></li>
                    <li><a class="dropdown-item" href="#">Notifications</a></li>
                    <li class="color-theme-li">
                        <a class="dropdown-item colorTheme-item" href="#">Color themes</a>
                        <div class="color-themes-btn">
                            <div class="ct-circle ct-first" onclick="changeColorTheme('first')"></div>
                            <div class="ct-circle ct-second" onclick="changeColorTheme('second')"></div>
                            <div class="ct-circle ct-third" onclick="changeColorTheme('third')"></div>
                        </div>
                    </li>

                    <li><a class="dropdown-item dropdown-item-email">@User.Identity.Name</a></li>
                    <li>
                        <div class="dropdown-item">
                            <form method="post" asp-action="logout" asp-controller="account">
                                <button class="logoutButton" type="submit">
                                    Logout
                                </button>
                            </form>
                        </div>
                    </li>
                </ul>
            </div>

        </div>
    </nav>
    <div class="loadingBackground">
        <div class="loadingSpinner">

        </div>
    </div>
    <main class="mainRender">
        @RenderBody()

    </main>



    <div class="modal" tabindex="-1" role="dialog" id="form-modal">
        <div class="modal-dialog" id="modalDialog">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h5 class="modal-title text-center w-100"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>






    <footer>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-confirm/jquery-confirm.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/jss/site.js" asp-append-version="true"></script>
    <script src="~/jss/notify.min.js"></script>
    @*<script src="~/lib/font-awesome/js/all.js"></script>*@
    <script>
        $(document).ready(function () {
            if (window.location.href.toUpperCase().indexOf("/DASHBOARD") != -1) {
                document.getElementById("periodButtons").style.display = "flex";
            }
            var colorTheme = sessionStorage.getItem("colorTheme");
            if (colorTheme == null || colorTheme == 'first') {
                changeColorTheme('first');
            }
            if (colorTheme == 'second') {
                changeColorTheme('second');
            }
            if (colorTheme == 'third') {
                changeColorTheme('third');
            }
            if (sessionStorage.getItem("sideNavbarCollapsed") == "true") collapseSideNavbar();
            showPage();
        });
        function showPage() {
            var el = document.getElementsByClassName("loadingBackground")[0];
            el.classList.add("hidden");
            el.addEventListener("animationend", (event) => {
                if (event.type === "animationend") {
                    el.style.display = "none";
                    document.getElementsByTagName("main")[0].style.display = "block";
                }
            }, false);
        }
        function collapseSideNavbar() {
            var sideNavbarSize = document.getElementsByClassName("navbar-side")[0].offsetWidth;
            if (sideNavbarSize > 80) {
                document.getElementById("logo-icon").style.display = "block";
                document.getElementsByClassName("navbar-side")[0].style.width = "5rem";
                document.getElementsByClassName("navbar-top")[0].style.marginLeft = "5rem";
                document.getElementsByTagName("main")[0].style.marginLeft = "5rem";
                document.getElementById("collapseSideNavbar").style.transform = "rotate(180deg)";
                document.getElementsByClassName("navbar-top")[0].style.width = "calc(100% - 5rem)";
                sessionStorage.setItem("sideNavbarCollapsed", true);
                var links = document.getElementsByClassName("link-text");
                for (var i = 0; i < links.length; i++) {
                    links[i].style.display = "none";
                }
                if (window.location.href.toUpperCase().indexOf("/DASHBOARD") != -1) {
                    showLineChart();
                    showPieChart();
                }
            }
            else {
                document.getElementById("logo-icon").style.display = "none";
                document.getElementsByClassName("navbar-side")[0].style.width = "14rem";
                document.getElementsByClassName("navbar-top")[0].style.marginLeft = "14rem";
                document.getElementsByTagName("main")[0].style.marginLeft = "14rem";
                document.getElementById("collapseSideNavbar").style.transform = "rotate(0deg)";
                document.getElementsByClassName("navbar-top")[0].style.width = "calc(100% - 14rem)";
                var links = document.getElementsByClassName("link-text");
                for (var i = 0; i < links.length; i++) {
                    links[i].style.display = "inline";
                }
                if (window.location.href.toUpperCase().indexOf("/DASHBOARD") != -1) {
                    showLineChart();
                    showPieChart();
                }
                sessionStorage.setItem("sideNavbarCollapsed", false);
            }
        }
        function changeColorTheme(color) {
            if (color == 'first') {
                document.documentElement.style.setProperty('--bg-primary', '#212529');
                document.documentElement.style.setProperty('--bg-secondary', '#2D3339');
                document.documentElement.style.setProperty('--bg-third', '#0DCAF0');
                document.documentElement.style.setProperty('--text-primary', '#434D56');
                document.documentElement.style.setProperty('--text-secondary', '#9ba6b0');
                document.documentElement.style.setProperty('--text-third', 'white');
                document.documentElement.style.setProperty('--piechart-border-color', '#9ba6b0');
                document.documentElement.style.setProperty('--scrollbar-primary', '#0790ab');
                document.documentElement.style.setProperty('--btn-succes', '#1B998B');
                document.documentElement.style.setProperty('--btn-succes-hover', '#136c62');
                document.documentElement.style.setProperty('--btn-info', '#87BCDE');
                document.documentElement.style.setProperty('--btn-info-hover', '#5fa7d3');
                document.documentElement.style.setProperty('--btn-danger', '#DF2935');
                document.documentElement.style.setProperty('--btn-danger-hover', '#c81e29');
                document.documentElement.style.setProperty('--btn-danger-color', '#212529');
                sessionStorage.setItem("colorTheme", "first");
            }
            if (color == 'second') {
                document.documentElement.style.setProperty('--bg-primary', '#03071e');
                document.documentElement.style.setProperty('--bg-secondary', '#370617');
                document.documentElement.style.setProperty('--bg-third', '#dc2f02');
                document.documentElement.style.setProperty('--text-primary', '#6a040f');
                document.documentElement.style.setProperty('--text-secondary', '#faa307');
                document.documentElement.style.setProperty('--text-third', '#faa307');
                document.documentElement.style.setProperty('--piechart-border-color', '#faa307');
                document.documentElement.style.setProperty('--scrollbar-primary', '#dc2f02');
                document.documentElement.style.setProperty('--btn-succes', '#82D173');
                document.documentElement.style.setProperty('--btn-succes-hover', '#65c752');
                document.documentElement.style.setProperty('--btn-info', '#7EBDC2');
                document.documentElement.style.setProperty('--btn-info-hover', '#63b0b6');
                document.documentElement.style.setProperty('--btn-danger', '#EF6461');
                document.documentElement.style.setProperty('--btn-danger-hover', '#ed4845');
                document.documentElement.style.setProperty('--btn-danger-color', 'white');
                sessionStorage.setItem("colorTheme", "second");
            }
            if (color == 'third') {
                document.documentElement.style.setProperty('--bg-primary', '#2F3C7E');
                document.documentElement.style.setProperty('--bg-secondary', '#3e50a8');
                document.documentElement.style.setProperty('--bg-third', '#CF4D6F');
                document.documentElement.style.setProperty('--text-primary', '#6290C8');
                document.documentElement.style.setProperty('--text-secondary', '#FBEAEB');
                document.documentElement.style.setProperty('--text-third', 'white');
                document.documentElement.style.setProperty('--piechart-border-color', '#2F3C7E');
                document.documentElement.style.setProperty('--scrollbar-primary', '#CF4D6F');
                document.documentElement.style.setProperty('--btn-succes', '#82D173');
                document.documentElement.style.setProperty('--btn-succes-hover', '#65c752');
                document.documentElement.style.setProperty('--btn-info', '#5998C5');
                document.documentElement.style.setProperty('--btn-info-hover', '#63b0b6');
                document.documentElement.style.setProperty('--btn-danger', '#CA3C25');
                document.documentElement.style.setProperty('--btn-danger-hover', '#ed4845');
                document.documentElement.style.setProperty('--btn-danger-color', 'white');
                sessionStorage.setItem("colorTheme", "third");
            }
        }

        $("#dropdownAvatar").on('click', '#dropdownMenuList li', function (e) {
            e.stopPropagation();
        });
    </script>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }
</body>
</html>